    <script type="text/javascript">
      function receiveMessage (e) {
        if (e.data.url){
          $('.modal').modal()                      // initialized with defaults
          $('.modal').modal({ keyboard: false })   // initialized with no keyboard
          html = "<iframe id='popUp' src='" + e.origin + e.data.url + "' style='border: 0; width: 100%; display: inline-block; margin: 0 auto;' marginheight='20'/></iframe>"
          $('.modal-body').html(html)
          $('.modal').modal('show')
        }
        else if (e.data.action == "closePopup"){
          $('.modal').modal('hide')
        }
      }

      window.addEventListener('message', receiveMessage, false)
    </script>

